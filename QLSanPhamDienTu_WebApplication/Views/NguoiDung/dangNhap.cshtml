@{
    ViewBag.Title = "dangNhap";
    Layout = "~/Views/Shared/QLSPLayout.cshtml";
}
<style type="text/css">
    .form-group input{
        border-radius:24px;
        height:40px;
    }
    #btn {
        border-radius:24px;
        height:40px;
    }
    a:hover {
      color: #224abe;
      text-decoration: underline;
    }
</style>

<div class="container" style="width:800px">
    <div class="mt-2">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Thông tin đăng nhập!</h1>
        </div>
        @using (Html.BeginForm("dangNhap", "NguoiDung", FormMethod.Post))
        {
            @Html.ValidationSummary(false, "", new { @class="text-danger"})
            <div class="form-group">
                @Html.TextBox("TenDangNhap","", new {@class="form-control form-control-user" ,@placeholder= "Tên đăng nhập" , @autofocus="autofocus"}) 
            </div>
            <div class="form-group">
                @Html.Password("MatKhau","", new {@class="form-control form-control-user" ,@placeholder= "Mật khẩu"}) 
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox small">
                    <input type="checkbox" class="custom-control-input" id="customCheck">
                    <label class="custom-control-label" for="customCheck">
                        Remember Me
                    </label>
                </div>
            </div>
            <button type="submit" id="btn" class="btn btn-primary btn-user btn-block">Đăng nhập
            </button>
            <div class="text-danger">
            @ViewData["Loi1"]<br />
            @ViewData["Loi2"]<br />
            @ViewData["Loi3"]
        </div>
        }
        <hr>
        <div class="text-center">
            <a class="small" href="forgot-password.html">Forgot Password?</a>
        </div>
        <div class="text-center">
            <a class="small" href="@Url.Action("dangKy","NguoiDung")">Create an Account!</a>
        </div>
    </div>

</div>