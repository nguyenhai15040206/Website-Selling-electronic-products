@{
    ViewBag.Title = "dangKy";
    Layout = "~/Views/Shared/QLSPLayout.cshtml";
}
<style type="text/css">
        .form-group input {
            border-radius: 24px;
            height: 40px;
        }

        #btn {
            border-radius: 24px;
            height: 50px;
        }

        a:hover {
            color: #224abe;
            text-decoration: underline;
        }
    </style>
@using (@Html.BeginForm())
{
    @Html.ValidationSummary(true)
    {
<div class="container" style="width:700px">
    <div>
        <div class="text-center">
            <h4 class="text-gray-900 mb-2 mt-2">Đăng ký thành viên!</h4>
        </div>
        <div>
            <form class="user">
                <div class="form-group">
                    <div class="mb-3 mb-sm-0">
                        <input id="tenKhachHang" name="HoTen" class="form-control form-control-user" placeholder = "Nhập họ và tên" type = "text" /><span class="text-danger">@ViewData["Loi1"]</span>
                        @*@Html.TextBox("HoTen", "", new { @class = "form-control form-control-user", @placeholder = "Nhập họ và tên", @type = "text", @id="tenKhachHang" }) <span class="text-danger">@ViewData["Loi1"]</span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-7 mb-3 mb-sm-0">
                        <input id="email" name="Email" class="form-control form-control-user" placeholder="a@gmail.com" type="email" />
                        @*@Html.TextBox("Email", "", new { @class = "form-control form-control-user", @placeholder = "a@gmail.com", @type = "email" })*@
                    </div>
                    <div class="col-sm-5">
                        <input id="soDienThoai" name="DienThoai" class="form-control form-control-user" placeholder="Nhập số điện thoại" type="tel" /><span class="text-danger">@ViewData["Loi2"] @ViewData["Loi6"]</span>
                        @*@Html.TextBox("DienThoai", "", new { @class = "form-control form-control-user", @placeholder = "Nhập số điện thoại", @type = "tel" }) <span class="text-danger">@ViewData["Loi2"] @ViewData["Loi6"] </span>*@
                    </div>
                </div>
                <div class="form-group">
                    <input id="tenDangNhap" name="TenDangNhap" class="form-control form-control-user" placeholder="Nhập tài khoản" type="text" /><span class="text-danger">@ViewData["Loi3"] @ViewData["Loi8"]</span>
                    @*@Html.TextBox("TenDangNhap", "", new { @class = "form-control form-control-user", @placeholder = "Nhập tài khoản", @type = "text" }) <span class="text-danger">@ViewData["Loi3"] @ViewData["Loi8"] </span>*@
                </div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <input id="matKhau" name="MatKhau" class="form-control form-control-user" placeholder="Nhập mật khẩu" type="password" /><span class="text-danger">@ViewData["Loi4"]</span>
                        @*@Html.TextBox("MatKhau", "", new { @class = "form-control form-control-user", @placeholder = "Nhập mật khẩu", @type = "password" }) <span class="text-danger">@ViewData["Loi4"] </span>*@
                    </div>
                    <div class="col-sm-6">
                        <input id="reMatKhau" name="ReMatKhau" class="form-control form-control-user" placeholder="Nhập lại mậy khẩu" type="password" /><span class="text-danger">@ViewData["Loi5"] @ViewData["Loi7"]</span>
                       @* @Html.TextBox("ReMatKhau", "", new { @class = "form-control form-control-user", @placeholder = "Nhập lại mật khẩu", @type = "password" }) <span class="text-danger">@ViewData["Loi5"] @ViewData["Loi7"] </span>*@
                    </div>
                </div>
                <div class="form-group">
                    <input id="diaChi" name="DiaChi" class="form-control form-control-user" placeholder="Nhập địa chỉ" type="text" />
                    @*@Html.TextBox("DiaChi", "", new { @class = "form-control form-control-user", @placeholder = "Nhập địa chỉ", @type = "text" })*@
                </div>
                <button style="height:40px; border-radius:15px" type="submit" id="btnDangKi" class="btn btn-primary btn-user btn-block">Đăng kí
                    </button> 
            </form>
            <hr>
                <div class="text-center">
                    <a class="small" href="@Url.Action("dangNhap","NguoiDung")">Đã có tài khoản? Đăng nhập!</a>
                </div>
        </div>
    </div>
</div>
}
}

