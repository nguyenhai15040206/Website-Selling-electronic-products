@{
    ViewBag.Title = "loadTinTucAPI";
    Layout = "~/Views/Shared/QLSPLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        Thông tin từ Apple
    </div>
    @foreach (var item in ViewBag.data)
    {
    <div class="card-body">
        <div>
            <span class="h4" style="font-weight:bold;" >@item.title</span>
        </div>
        <div class="d-flex mt-2">
            <div style="width:35%">
                <img style="width:100%" src="@item.urlToImage" />
            </div>
            <div style="width:65%;margin-left:10px">
                <span class="text-danger">Description: <span class="text-dark" style="font-size:14px; font-weight:500">@item.description</span></span>
                <p class="text-danger">Content:<span class="text-dark" style="font-size:14px; font-weight:500"> @item.content</span></p>
                <div class="d-flex">
                    <div>
                        <a href="@item.url">Xem chi tiết</a>
                    </div>
                    <div style="margin-left:2px">
                        <span>| Tác giả: @item.author</span>
                    </div>
                    <div style="margin-left:2px"> | Ngày đăng: @item.publishedAt</div>
                </div>
            </div>
        </div>
        <hr />
    </div>
    }
</div>

